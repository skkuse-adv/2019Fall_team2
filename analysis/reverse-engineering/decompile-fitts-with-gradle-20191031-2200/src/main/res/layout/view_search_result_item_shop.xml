    <LinearLayout android:orientation="horizontal" android:paddingTop="15dp" android:layout_width="match_parent" android:layout_height="50dp">
        <ImageView android:layout_width="16dp" android:layout_height="16dp" android:contentDescription="쇼핑몰아이콘" app:srcCompat="@drawable/search_result_shop_icon"/>
        <TextView android:textStyle="bold" android:textColor="@color/gray6" android:id="@+id/nameTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="5dp"/>
    </LinearLayout>
    <View android:id="@+id/separatorView" android:background="@color/gray1" android:layout_width="match_parent" android:layout_height="0.5dp"/>
</LinearLayout>
