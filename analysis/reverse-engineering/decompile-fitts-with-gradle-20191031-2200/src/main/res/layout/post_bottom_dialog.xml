        <TextView android:textSize="15sp" android:textColor="@color/gray6" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="22dp" android:text="@string/post_declaration" android:layout_marginStart="12dp" android:layout_toEndOf="@+id/declaration_post_image"/>
