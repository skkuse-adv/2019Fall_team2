    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/share_facebook" android:layout_width="match_parent" android:layout_height="65dp" android:paddingStart="24dp" android:paddingEnd="24dp">
        <ImageView android:id="@+id/share_facebook_image" android:layout_width="22dp" android:layout_height="22dp" android:src="@drawable/share_facebook" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:layout_constraintVertical_bias="0.5"/>
