<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="26sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/login_title_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="25dp" android:text="@string/log_in_text"/>
    <ListView android:id="@+id/login_list_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:divider="@android:color/transparent" android:dividerHeight="10sp"/>
    <RelativeLayout android:id="@+id/login_close_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="50dp">
        <Button android:id="@+id/login_close_button" android:background="@drawable/btn_x" android:layout_width="35dp" android:layout_height="35dp" android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
