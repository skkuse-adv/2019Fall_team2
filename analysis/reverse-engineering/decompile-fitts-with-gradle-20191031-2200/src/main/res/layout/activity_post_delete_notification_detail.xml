                <TextView android:textSize="28sp" android:textStyle="bold" android:textColor="@color/gray6" android:id="@+id/captionTextView" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:text="삭제된 포스트에 대해 알려드려요." android:lineSpacingMultiplier="1.2" android:paddingStart="24dp" android:paddingEnd="24dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/toolbarLayout"/>
                <TextView android:textSize="15sp" android:textColor="@color/gray6" android:id="@+id/mainDescriptionTextView" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="회원님의 포스트가 수정요청일로부터 3일 내 수정되지 않거나 수정사항이 미흡하여 MM월 dd일에 자동 삭제처리 되었습니다. 다음에 더 좋은 포스팅으로 만나요❤️" android:lineSpacingMultiplier="1.4" android:layout_marginStart="24dp" android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/captionTextView"/>
                <View android:id="@+id/separatorView" android:background="@color/gray2" android:layout_width="0dp" android:layout_height="0.5dp" android:layout_marginTop="18dp" android:layout_marginStart="24dp" android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/mainDescriptionTextView"/>
