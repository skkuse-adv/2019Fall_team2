<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/dialog" android:layout_width="306dp" android:layout_height="wrap_content">
    <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/gray6" android:id="@+id/dialog_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="35dp" android:text="포스트 임시저장" android:paddingStart="24dp" android:paddingEnd="24dp"/>
    <TextView android:textSize="14sp" android:textColor="@color/gray6" android:id="@+id/dialog_sub" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="26dp" android:text="작성하신 내용을 임시로 저장하시겠습니까?" android:layout_below="@+id/dialog_title" android:paddingStart="24dp" android:paddingEnd="24dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="14dp" android:layout_below="@+id/dialog_sub" android:layout_marginEnd="10dp" android:layout_alignParentEnd="true">
        <Button android:textSize="15sp" android:textStyle="bold" android:textColor="@color/gray8" android:id="@+id/cancel" android:background="@android:color/transparent" android:layout_width="60dp" android:layout_height="wrap_content" android:text="취소"/>
        <Button android:textSize="15sp" android:textStyle="bold" android:textColor="@color/point" android:id="@+id/ok" android:background="@android:color/transparent" android:padding="0dp" android:layout_width="60dp" android:layout_height="wrap_content" android:text="확인"/>
    </LinearLayout>
</RelativeLayout>
