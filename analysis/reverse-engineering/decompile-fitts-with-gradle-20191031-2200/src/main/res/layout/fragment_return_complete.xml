                <TextView android:textSize="14sp" android:textColor="@color/gray6" android:id="@+id/textPaymentRefunDesc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="34dp" android:text="구매 시 결제하신 결제수단으로\10자동 환불될 예정입니다." android:fontFamily="@font/kopubdotum_pro_medium"/>
