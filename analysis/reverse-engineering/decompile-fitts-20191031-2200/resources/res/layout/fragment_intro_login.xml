<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/rootView" android:background="@drawable/intro_background" android:paddingLeft="24dp" android:paddingRight="24dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/layout_intro_buttons">
        <ImageView android:id="@+id/text_intro_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/intro_title" android:contentDescription="@string/image_intro_title"/>
        <TextView android:textSize="16sp" android:textColor="#ffffff" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="22dp" android:text="@string/app_sub_name" android:layout_below="@+id/text_intro_title"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/layout_intro_buttons" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <Button android:textSize="14sp" android:textColor="#ffffff" android:id="@+id/facebookAuthenticationButton" android:background="@drawable/round_button_intro" android:paddingLeft="30dp" android:paddingRight="30dp" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginBottom="10.3dp" android:text="@string/string_facebook_join" android:drawableStart="@drawable/button_facebook"/>
        <Button android:textSize="14sp" android:textColor="#ffffff" android:id="@+id/kakaoAuthenticationButton" android:background="@drawable/round_button_intro" android:paddingLeft="30dp" android:paddingRight="30dp" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginBottom="10.3dp" android:text="@string/string_kakao_join" android:drawableStart="@drawable/button_kakao"/>
        <Button android:textSize="14sp" android:textColor="#ffffff" android:id="@+id/emailAuthenticationButton" android:background="@drawable/round_button_intro_email" android:paddingLeft="30dp" android:paddingRight="30dp" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginBottom="24.7dp" android:text="@string/string_email_join"/>
        <TextView android:textSize="12sp" android:textColor="#ffffff" android:gravity="center" android:layout_gravity="center" android:id="@+id/showLoginButton" android:layout_width="wrap_content" android:layout_height="35dp" android:text="@string/string_goto_login"/>
    </LinearLayout>
</RelativeLayout>
